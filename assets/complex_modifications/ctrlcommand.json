{
    "title": "CtrlCommand",
    "rules": [
        {
            "description": "CtrlCommand: Control enables CtrlCommand mode.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "ctrlcommand_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "ctrlcommand_mode",
                                "value": 0
                            }
                        }
                    ]
                }
            ]
        },
        {
            "description": "CtrlCommand: control + [x, c, v] to Cut, Copy, Paste",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "x",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "x",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "ctrlcommand_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "c",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "c",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "ctrlcommand_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "v",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "v",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "ctrlcommand_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        }
    ]
}